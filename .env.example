# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tiation_cms
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tiation_cms
DB_USER=tiation_user
DB_PASSWORD=your_secure_password

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# API Configuration
API_PREFIX=/api/v1
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100

# File Storage
STORAGE_PROVIDER=local
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tiatheone@protonmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=tiatheone@protonmail.com
FROM_NAME=Tiation CMS

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=tiation-cms-uploads

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# External APIs (Optional)
EXTERNAL_API_KEY=
EXTERNAL_API_URL=

# Development Tools
DEBUG=tiation-cms:*
SWAGGER_ENABLED=true
